# This Gemfile isn't necessarily intended as some sort of gospell, it's
# just a collection of gems that I was able to assemble to get rake (the
# tests) to run under Ruby 1.9.2 for use with my Rails 3.1.1 app.

source 'http://rubygems.org'

gem 'activeresource', '3.1.1'
gem 'oauth-active-resource', '0.4.6'
gem 'builder', '3.0.0'
gem 'oauth', '0.4.6'
gem 'multipart', '0.2.1'
gem 'multipart-post', '1.1.5'

group :test, :development do
  gem 'rake', '0.9.2.2'
  gem 'fakeweb'
  gem 'shoulda'
  gem 'mocha'
end
